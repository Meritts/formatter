{
    "name": "meritt/formatter",
    "description": "Common data formatter",
    "keywords": [ "translation", "format" ],
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Kaléu Caminha",
            "email": "kaleu@meritt.com.br"
        },
        {
            "name": "Luís Otávio Cobucci Oblonczyk",
            "email": "luis@meritt.com.br"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.meritt.com.br",
            "options": {
                "ssl": {
                    "local_cert": "/opt/meritt/meritt.pem"
                }
            }
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "respect/validation": "dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*",
        "pdepend/pdepend" : "*",
        "phpmd/phpmd" : "*",
        "phploc/phploc": "*",
        "sebastian/phpcpd": "*",
        "phpdocumentor/phpdocumentor": "*",
        "phpdocumentor/template-responsive-twig": "*"
    },
    "autoload": {
        "psr-0": { "Meritt": "src/" }
    }
}
